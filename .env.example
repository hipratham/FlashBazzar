dotenv
# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Twilio (or other SMS Gateway)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number # Or SMS gateway sender ID

# SendGrid (or other Email Gateway)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_SENDER_EMAIL=your-sender-email@example.com

# Cloud Run/Server Configuration
PORT=8080 # Or the port your Go application will listen on